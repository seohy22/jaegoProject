<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".searchItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <EditText
            android:id="@+id/itemList_edt"
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="16dp"
            android:background="#D5D1D1"
            android:paddingLeft="10dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/search_items_searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:textColor="#000000"
            android:text="검색"
            android:textSize="15dp" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5D1D1">

        <ListView
            android:id="@+id/search_items_itemListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            android:divider="#000000"
            android:layout_margin="16dp"
            android:background="@drawable/roundedbox_ripple"></ListView>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment"></RelativeLayout>
</LinearLayout>